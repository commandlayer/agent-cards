{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://commandlayer.org/agent-cards/schemas/v1.0.0/commons/agent.card.base.schema.json",
  "title": "CommandLayer Agent Card (v1.0.0)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "slug",
    "display_name",
    "description",
    "owner",
    "ens",
    "version",
    "status",
    "class",
    "implements",
    "schemas",
    "schemas_mirror",
    "entry",
    "capabilities",
    "meta",
    "networks",
    "license",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "id": { "type": "string" },
    "slug": { "type": "string" },
    "display_name": { "type": "string" },
    "description": { "type": "string" },
    "owner": { "type": "string" },
    "ens": { "type": "string" },
    "version": { "type": "string" },
    "status": { "type": "string" },
    "class": { "type": "string", "enum": ["commons", "commercial"] },
    "implements": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "schemas": {
      "type": "object",
      "additionalProperties": false,
      "required": ["request", "receipt"],
      "properties": {
        "request": { "type": "string" },
        "receipt": { "type": "string" }
      }
    },
    "schemas_mirror": {
      "type": "object",
      "additionalProperties": false,
      "required": ["request", "receipt"],
      "properties": {
        "request": { "type": "string", "format": "uri" },
        "receipt": { "type": "string", "format": "uri" }
      }
    },
    "entry": { "type": "string" },
    "capabilities": {
      "type": "object",
      "additionalProperties": true
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    },
    "networks": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "license": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}
